{
  "name": "hc-smoke-test",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "smoke-test": "npm install && npm run download:hc-stress-test && npm run dist && npm run tauri build",
    "dist": "rimraf ./dist && extract-zip ./pouch/ui.zip ./dist && cpy ./src-tauri/assets/ ./dist/kangaroo_assets --flat",
    "tauri": "tauri",
    "download:hc-stress-test": "curl -L --output pouch/hc-stress-test.happ https://s3.eu-central-2.wasabisys.com/holochain-launcher/hc-smoke-test/holochain-0.1/hc-stress-test.happ && curl -L --output ./pouch/ui.zip https://s3.eu-central-2.wasabisys.com/holochain-launcher/hc-smoke-test/holochain-0.1/dist.zip"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^1.5.2",
    "cpy-cli": "5.0.0",
    "extract-zip-relative-path": "2.0.4",
    "rimraf": "5.0.1"
  }
}
